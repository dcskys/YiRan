<resources>

    <!-- Base application theme. -->
    <!--Base Theme-->
    <!--Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <!--no actionbar and title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--action bar color-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>

        <!--colorAccent 对应编辑，，选择，点击时的颜色，如悬浮按钮的颜色-->
        <item name="colorAccent">#00796b</item>
        <!--window background-->
        <item name="android:windowBackground">@color/window_background</item>
    </style>


    <style name="AppTheme" parent="AppTheme.Base">


    </style>


    
    <style name="OtherActivity" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!--<style name="LauncherScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>-->


    <!--设置页面的样式-->
    <style name="TxtTitle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:focusable">false</item>
    </style>
    
    <!--popwindows  动画-->
    
    <style name="dir_popupwindow_anim">
        <item name="android:windowEnterAnimation">@anim/silde_up</item>
        <!--离开动画  向下-->
        <item name="android:windowExitAnimation">@anim/silde_down</item>
    </style>
    
    
    
    
    




</resources>
